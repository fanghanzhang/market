<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:layout_width="23dp"
        android:layout_height="23dp"
        android:layout_marginLeft="26dp"
        android:layout_marginTop="58dp"
        android:src="@drawable/chahcha" />

    <TextView
        android:layout_width="234dp"
        android:layout_height="37dp"
        android:layout_marginLeft="31dp"
        android:layout_marginTop="126dp"
        android:gravity="center_vertical"
        android:text="输入验证码即可注册"
        android:textColor="#535552"
        android:textSize="26sp" />

    <TextView
        android:layout_width="167dp"
        android:layout_height="22dp"
        android:layout_marginLeft="31dp"
        android:layout_marginTop="189dp"
        android:text="已发送至18588884897"
        android:textColor="#535552"
        android:textSize="16sp" />

    <TextView
        android:layout_width="112dp"
        android:layout_height="20dp"
        android:layout_marginLeft="43dp"
        android:layout_marginTop="378dp"
        android:gravity="center_vertical"
        android:text="没有收到验证码？"
        android:textColor="#A2A2A2"
        android:textSize="14sp" />

    <RelativeLayout
        android:id="@+id/ll_code"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="306dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginRight="10dp"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tv_code1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@null"
                    android:gravity="center"
                    android:textColor="#262626"
                    android:textSize="24sp" />

                <View
                    android:id="@+id/v1"
                    android:layout_width="40dp"
                    android:layout_height="1dp"
                    android:background="#D8D8D8" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginRight="10dp"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tv_code2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@null"
                    android:gravity="center"
                    android:textColor="#262626"
                    android:textSize="24sp" />

                <View
                    android:id="@+id/v2"
                    android:layout_width="40dp"
                    android:layout_height="1dp"
                    android:background="#D8D8D8" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginRight="10dp"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tv_code3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@null"
                    android:gravity="center"
                    android:textColor="#262626"
                    android:textSize="24sp" />

                <View
                    android:id="@+id/v3"
                    android:layout_width="40dp"
                    android:layout_height="1dp"
                    android:background="#D8D8D8" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginRight="10dp"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tv_code4"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@null"
                    android:gravity="center"
                    android:textColor="#262626"
                    android:textSize="24sp" />

                <View
                    android:id="@+id/v4"
                    android:layout_width="40dp"
                    android:layout_height="1dp"
                    android:background="#D8D8D8" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginRight="10dp"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tv_code5"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@null"
                    android:gravity="center"
                    android:textColor="#262626"
                    android:textSize="24sp" />

                <View
                    android:id="@+id/v5"
                    android:layout_width="40dp"
                    android:layout_height="1dp"
                    android:background="#D8D8D8" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginRight="10dp"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tv_code6"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@null"
                    android:gravity="center"
                    android:textColor="#262626"
                    android:textSize="24sp" />

                <View
                    android:id="@+id/v6"
                    android:layout_width="40dp"
                    android:layout_height="1dp"
                    android:background="#D8D8D8" />
            </LinearLayout>
        </LinearLayout>

        <EditText
            android:id="@+id/et_code"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@android:color/transparent"
            android:cursorVisible="false"
            android:inputType="number"
            android:textColor="@android:color/transparent" />
    </RelativeLayout>

    <TextView
        android:id="@+id/timer"
        android:layout_width="126dp"
        android:layout_height="29dp"
        android:layout_marginLeft="207dp"
        android:layout_marginTop="373dp"
        android:background="@drawable/sendretry"
        android:gravity="center"
        android:text="发送验证码"
        android:textColor="#ffffff"
        android:textSize="14sp" />

